@page
@inject UserManager<Models.ApplicationUser> UserManager;
@inject SignInManager<Models.ApplicationUser> SignInManager;
@model Disc_Cord.Pages.UserPageModel
@{
    var user = await UserManager.GetUserAsync(User);
}

<div class="card mt-4 border-2">
    <div class="card-header bg-secondary pe-0 py-1 text-light">
        @Model.User.Alias
    </div>
    <div class="m-1">
        <div class="card-body m-1">
            <div class="row">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <img src="~/img/@Model.User.ImageUrl" width="150px" />
                            <br />
                            <p class="mt-3">@Model.User.AboutMe</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card ms-3 border-0">
                        <div class="card-body pt-0">
                            <table class="table table-striped m-0 p-0">
                                <thead class="bg-black text-white">
                                    <tr>
                                        <th>Senaste aktivitet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Activities)
                                    {
                                        var date = item.GetType().GetProperty("Date")?.GetValue(item);
                                        var text = item.GetType().GetProperty("Text")?.GetValue(item)?.ToString();
                                            var truncatedText = "place";
                                        if (text != null)
                                        {
                                            truncatedText = text?.Length > 20 ? (text.Substring(0, Math.Min(20, text.Length)) + "...") : text;
                                        }


                                        var id = item.GetType().GetProperty("Id")?.GetValue(item);
                                        var postOrComment = item.GetType().GetProperty("PostOrComment")?.GetValue(item);




                                        <tr>
                                            <td>
                                                @if (@postOrComment != null)
                                                {
                                                    <a class="text-black text-decoration-none text-start" asp-route-id="@id" asp-page="./PostComment">Skapade inlägget:  <span class="fw-light text">@text </span></a>
                                                }
                                                else
                                                {
                                                    <a class="text-black text-decoration-none text-start" asp-route-id="@id" asp-page="./PostComment">Kommenterade: <span class="fw-light text">@truncatedText </span></a>
                                                }
                                                <span class="text-end fw-lighter">@date</span>
                                            </td>
                                        </tr>

                                    }
                                    @*@foreach (var post in Model.Activities)
                                    {

                                    }*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@if (SignInManager.IsSignedIn(User))
{
    <form method="post">

        <input asp-for="Message.SenderId" type="hidden" value="@user.Id" />
        <input asp-for="Message.ReceiverId" type="hidden" value="@Model.User.Id" />
        <input asp-for="Message.Timestamp" type="hidden" value="@DateTime.Now" />
        <input asp-for="Message.IsRead" type="hidden" value="false" />

        <textarea asp-for="Message.Text" class="form-control mt-5" cols="40" rows="5"></textarea>
        <br>
        <input type="submit" name="addTask" value="Skicka" class="btn btn-primary" />

    </form>
}