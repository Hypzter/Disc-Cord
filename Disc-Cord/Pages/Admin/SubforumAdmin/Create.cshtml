@page
@model Disc_Cord.Pages.Admin.SubforumAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
    var date = DateTime.Now;
}

<h1>Create</h1>

<h4>Subforum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subforum.Name" class="control-label"></label>
                <input asp-for="Subforum.Name" class="form-control" />
                <span asp-validation-for="Subforum.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subforum.ForumId" class="control-label">Forum</label>
                <select asp-for="Subforum.ForumId" class ="form-control" asp-items="ViewBag.ForumId"></select>
            </div>
            <div class="form-group">
                <input type="hidden" value="@date" asp-for="Subforum.Date" class="form-control" />
                <span asp-validation-for="Subforum.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
