@page
@model ForumModel
@{
	ViewData["Title"] = "Startsida";
}


@{
	foreach (var f in Model.Forums)
	{
		<p>@f.Name</p>
		<p>Created @f.Date</p>
		<ul>
			@foreach (var s in f.SubForums)
			{
				<li><a asp-page="./ForumPost" asp-route-id="@s.Id">@s.Name</a></li>
				<ul>
					@foreach (var np in s.NewPosts)
					{
						<li>@np.Header</li>					
						<ul>
							@foreach (var c in np.Comments)
							{
								<li><strong>@c.Text</strong></li>

							}
						</ul>

					}
				</ul>
			}
		</ul>

	}

}